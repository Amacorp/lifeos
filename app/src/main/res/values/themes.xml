<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- LifeOs Theme - Dark Material You -->
    
    <style name="Theme.LifeOs" parent="android:Theme.Material.NoActionBar">
        <!-- Primary Colors -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
        
        <!-- Text -->
        <item name="android:textColorPrimary">@color/on_background</item>
        <item name="android:textColorSecondary">@color/on_surface_variant</item>
        
        <!-- Window Features -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <!-- Animation -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
        
        <!-- Edge to Edge -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.LifeOs.Splash" parent="Theme.LifeOs">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>